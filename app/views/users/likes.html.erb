<div class="main user-show">
  <div class="container">
    <div class="user-header">
      <img src="<%= "/user_images_header/#{@user.header_image}" %>">
    </div>
    <div class="user-icon">
      <img src="<%= "/user_images/#{@user.image_name}" %>">
    </div>
    <div class="user">
      <h2><%= @user.name %></h2>
      <p><i class="fas fa-map-pin"></i> <%= @user.area %></p>
      <p><i class="fas fa-link"></i> <%= link_to(@user.user_url) %></p>
      <p><%= @user.user_about %></p>
      <% if @user.id == @current_user.id %>
      <p><%= @user.email %></p>
        <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>
    </div>

    <ul class="user-tabs">
      <li><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li class="active"><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    </ul>

    <% @likes.each do |like| %>
      <% post = Post.find_by(id: like.post_id) %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
          <%= link_to(post.live_name, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
